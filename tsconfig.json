{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [ "esnext", "dom" ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
    ],

    // QOL Rules
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [ "**/*.ts" ],
  "exclude": [ "dist", "node_modules" ]
}